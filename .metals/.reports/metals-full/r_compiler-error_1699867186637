        Assertions.assertFalse(bankAccount.getTransactionsCount() > 0);
        for(int i = 0; i < 10; i++) {
            expectedValue += i * 100;
            bankAccount.deposit(mRossi.getUserID(), i * 100);
        }
        Assertions.assertEquals(expectedValue, bankAccount.getBalance());
